{%
  set classes = [
    'view',
    'view-' ~ id|clean_class,
    'view-id-' ~ id,
    'view-display-id-' ~ display_id,
    dom_id ? 'js-view-dom-id-' ~ dom_id,
    'all-content' in attributes.class ? 'w-full',
    'content-map' in attributes.class ? 'w-full',
  ]
%}
<div{{attributes.addClass(classes)}}>
	{{ title_prefix }}
	{% if title %}
		{{ title }}
	{% endif %}
	{{ title_suffix }}
	{% if header %}
		<div class="view-header">
			{{ header }}
		</div>
	{% endif %}
	{% if exposed %}
		<div class="view-filters">
			{{ exposed }}
		</div>
	{% endif %}
	{% if attachment_before %}
		<div class="attachment attachment-before">
			{{ attachment_before }}
		</div>
	{% endif %}

	{% if rows %}
		{% if 'all-content' in attributes.class %}
			<div class="all-content">
				<div class="grid gap-5 grid-cols-[repeat(auto-fit,minmax(250px,1fr))] place-items-center">
					{{ rows }}
				</div>
			</div>
		{% elseif 'about-us-pic' in attributes.class %}
			<div class="about-us-pic">
				<div class="grid gap-5 grid-cols-[repeat(auto-fit,minmax(250px,1fr))] place-items-center">
					{{ rows }}
			</div>
		{% elseif 'most-liked' in attributes.class %}
			<div class="most-liked">
				<div class="flex overflow-y-auto [-ms-scrollbar-style:none] [scrollbar-width:none] [&::-webkit-scrollbar]:hidden">
					<div class="flex  items-stretch p-4 gap-3">
						{{ rows }}
					</div>
				</div>
			</div>
		{% elseif 'most-recent' in attributes.class %}
			<div class="most-recent">
				<div class="flex overflow-y-auto [-ms-scrollbar-style:none] [scrollbar-width:none] [&::-webkit-scrollbar]:hidden">
					<div class="flex  items-stretch p-4 gap-3">
						{{ rows }}
					</div>
				</div>
			</div>
		{% else %}
			<div class="view-content">
				{{ rows }}
			</div>
		{% endif %}
	{% elseif empty %}
		<div class="view-empty">
			{{ empty }}
		</div>
	{% endif %}


	{% if pager %}
		{{ pager }}
	{% endif %}
	{% if attachment_after %}
		<div class="attachment attachment-after">
			{{ attachment_after }}
		</div>
	{% endif %}
	{% if more %}
		{{ more }}
	{% endif %}
	{% if footer %}
		<div class="view-footer">
			{{ footer }}
		</div>
	{% endif %}
	{% if feed_icons %}
		<div class="feed-icons">
			{{ feed_icons }}
		</div>
	{% endif %}
</div>
